on idle	doBotWork()	return 300end idleon doBotWork()	local userStatus		tell application "Skype"		set userStatus to send command "get USERSTATUS" script name "My Script"	end tell		if userStatus = "USERSTATUS OFFLINE" then -- if status offline, go hidden and check for messages			tell application "Skype"			send command "SET USERSTATUS INVISIBLE" script name "My Script"		end tell				delay 20 -- give slack 				tell application "Skype"			send command "SET USERSTATUS OFFLINE" script name "My Script"		end tell	end ifend doBotWork