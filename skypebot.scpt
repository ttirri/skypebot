on idle	doBotWork()	return 900end idleon doBotWork()	local userStatus, msg		tell application "Skype"		set userStatus to send command "get USERSTATUS" script name "My Script"	end tell		if userStatus = "USERSTATUS OFFLINE" then -- if status offline, go hidden and check for messages			tell application "Skype"			send command "SET USERSTATUS INVISIBLE" script name "My Script"		end tell				delay 20 -- give slack 				tell application "Skype"			set msg to send command "SEARCH MISSEDCHATS" script name "My Script"		end tell				if (count of msg) > 0 then -- if unread messaged, go online			tell application "Skype"				send command "SET USERSTATUS ONLINE" script name "My Script"			end tell		else			tell application "Skype"				send command "SET USERSTATUS OFFLINE" script name "My Script"			end tell		end if	end ifend doBotWork