on run	idleend runon idle	doBotWork()	return 900end idleon doBotWork()	local userStatus, missedChats, saveractivated, skypeBuddy, chatMessage, chatId		tell application "Skype"		set userStatus to send command "get USERSTATUS" script name "My Script"	end tell		if userStatus = "USERSTATUS OFFLINE" then -- if status offline, go hidden and check for messages			tell application "Skype"			send command "SET USERSTATUS INVISIBLE" script name "My Script"		end tell				delay 20 -- give slack 				tell application "Skype"			set missedChats to send command "SEARCH MISSEDCHATS" script name "My Script"		end tell				if missedChats is not "CHATS " then -- if unread messaged, go online			tell application "Skype"				send command "SET USERSTATUS ONLINE" script name "My Script"			end tell						tell application "System Events" to set the saveractivated to (exists process "ScreenSaverEngine")			if saveractivated then				-- nobody in front of the Mac				set skypeBuddy to text ((offset of "#" in missedChats) + 1) thru ((offset of "/" in missedChats) - 1) of missedChats				set chatId to text ((offset of "#" in missedChats)) thru -1 of missedChats				set chatMessage to "CHATMESSAGE " & chatId & " brb..."				tell application "Skype"					send command chatMessage script name "My Script"				end tell			end if		else			tell application "Skype"				send command "SET USERSTATUS OFFLINE" script name "My Script"			end tell		end if	end ifend doBotWork